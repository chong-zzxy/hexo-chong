<header class="header">
  <nav class="nav-container">
    <div class="nav-left">
      <a href="<%= url_for('/') %>" class="logo">
        <img src="<%= url_for(theme.site.avatar) %>" alt="<%= theme.site.name %>" class="avatar-mini">
        <span class="site-name"><%= theme.site.name %></span>
      </a>
    </div>

    <div class="nav-menu" id="nav-menu">
      <% for (let name in theme.menu) { %>
        <a href="<%= url_for(theme.menu[name]) %>"
           class="nav-item <%= is_current(theme.menu[name]) ? 'active' : '' %>">
          <%= name %>
        </a>
      <% } %>
    </div>

    <div class="nav-right">
