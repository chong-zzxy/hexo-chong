<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><% if (page.title) { %><%= page.title %> | <% } %><%= config.title %></title>
  <meta name="description" content="<%= page.description || theme.site.description || config.description %>">
  <link rel="icon" href="<%= url_for('/img/favicon.svg') %>">
  <link rel="stylesheet" href="<%= url_for('/css/style.css') %>">
  <link rel="stylesheet" href="<%= url_for('/css/theme-green.css') %>">
</head>
<body class="theme-green">
  <!-- Navigation -->
  <%- partial('_partial/header') %>

  <!-- Main Content -->
  <main class="main-container">
    <%- body %>
  </main>

  <!-- Footer -->
  <%- partial('_partial/footer') %>

  <!-- Back to Top -->
  <button id="back-to-top" class="back-to-top" aria-label="返回顶部">
    <svg viewBox="0 0 24 24" width="24" height="24">
      <path fill="currentColor" d="M7.41 15.41L12 10.83l4.59 4.58L18 14l-6-6-6 6z"/>
    </svg>
  </button>

  <script src="<%= url_for('/js/main.js') %>"></script>
  <script src="<%= url_for('/js/neural-network.js') %>"></script>
  <script src="<%= url_for('/js/scroll-animations.js') %>"></script>
</body>
</html>
