<!-- ÊäÄËÉΩ‰∏éÁ≤æÈÄâÂÜÖÂÆπÂêàÂπ∂Âå∫Âüü -->
<section class="tech-featured-section">
  <div class="container">
    <h2 class="section-title-landing">
      <span class="title-text">Tech & Featured</span>
    </h2>

    <!-- ÊäÄËÉΩÊ†áÁ≠æ‰∫ë -->
    <div class="skills-cloud-compact">
      <%
        const skills = [
          { name: 'PyTorch', level: 5 },
          { name: 'Computer Vision', level: 5 },
          { name: 'NLP', level: 4 },
          { name: 'Python', level: 5 },
          { name: 'Deep Learning', level: 5 },
          { name: 'YOLO', level: 4 },
          { name: 'Transformer', level: 4 },
          { name: 'OpenCV', level: 4 },
          { name: 'TensorFlow', level: 3 },
          { name: 'Git', level: 4 },
          { name: 'Linux', level: 4 },
          { name: 'Docker', level: 3 }
        ];
      %>
      <% skills.forEach(function(skill) { %>
        <span class="skill-tag-compact" data-level="<%= skill.level %>">
          <%= skill.name %>
        </span>
      <% }); %>
    </div>

    <!-- Á≤æÈÄâÊñáÁ´†Âç°Áâá -->
    <div class="featured-grid-compact">
      <%
        var featuredPosts = site.posts.sort('date', -1).limit(3);
        featuredPosts.each(function(post) {
      %>
        <a href="<%= url_for(post.path) %>" class="featured-card-compact">
          <div class="featured-card-header">
            <% if (post.categories && post.categories.length) { %>
              <span class="featured-category-compact">
                <%= post.categories.data[0].name %>
              </span>
            <% } %>
            <time class="featured-date-compact"><%= post.date.format('MM-DD') %></time>
          </div>

          <h3 class="featured-title-compact">
            <%= post.title %>
          </h3>

          <% if (post.description || post.excerpt) { %>
            <p class="featured-excerpt-compact">
              <%= strip_html(post.description || post.excerpt).substring(0, 80) %>...
            </p>
          <% } %>

          <div class="featured-footer-compact">
            <span class="read-time"><%= Math.ceil(strip_html(post.content).length / 400) %> min</span>
            <span class="read-more-arrow">‚Üí</span>
          </div>
        </a>
      <% }); %>
    </div>
  </div>
</section>

<!-- ÊúÄÊñ∞ÊñáÁ´†Êó∂Èó¥Á∫ø -->
<section class="recent-posts-section">
  <div class="container">
    <h2 class="section-title-landing">
      <span class="title-text">Recent Articles</span>
    </h2>

    <div class="recent-timeline">
      <%
        var recentPosts = site.posts.sort('date', -1).limit(5);
        recentPosts.each(function(post) {
      %>
        <div class="timeline-post">
          <time class="timeline-date"><%= post.date.format('MM-DD') %></time>
          <div class="timeline-content">
            <h4 class="timeline-title">
              <a href="<%= url_for(post.path) %>"><%= post.title %></a>
            </h4>
            <% if (post.categories && post.categories.length) { %>
              <span class="timeline-category"><%= post.categories.data[0].name %></span>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>

    <div class="view-all-link">
      <a href="<%= url_for('/archives/') %>" class="btn-view-all">
        View All Articles
        <svg viewBox="0 0 24 24" width="16" height="16">
          <path fill="currentColor" d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
        </svg>
      </a>
    </div>
  </div>
</section>
