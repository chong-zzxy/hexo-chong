<!-- ÂÖ®Â±è Hero Âå∫Âüü -->
<section class="landing-hero">
  <!-- Á•ûÁªèÁΩëÁªú Canvas ËÉåÊôØ -->
  <canvas id="neural-canvas" class="particles-bg"></canvas>

  <!-- ÊµÅ‰ΩìÊ¢ØÂ∫¶Ëâ≤Âùó -->
  <div class="fluid-blob fluid-blob-1"></div>
  <div class="fluid-blob fluid-blob-2"></div>
  <div class="fluid-blob fluid-blob-3"></div>

  <div class="hero-content-wrapper">
    <div class="hero-avatar-container">
      <img src="<%= url_for(theme.site.avatar) %>" alt="<%= theme.site.name %>" class="landing-avatar">
      <div class="avatar-ring"></div>
      <div class="avatar-ring-2"></div>
    </div>

    <h1 class="landing-title">
      <span class="greeting">Hi, I'm </span>
      <span class="name"><%= theme.site.name %></span>
    </h1>

    <div class="typewriter-container">
      <span class="typewriter-text" id="typewriter"></span>
      <span class="typewriter-cursor">_</span>
    </div>

    <div class="hero-social-links">
      <% for (let name in theme.social) { %>
        <a href="<%= theme.social[name] %>"
           class="hero-social-link"
           target="_blank"
           rel="noopener noreferrer"
           aria-label="<%= name %>">
          <span><%= name %></span>
        </a>
      <% } %>
    </div>

    <div class="scroll-indicator">
      <div class="scroll-arrow"></div>
      <span>Scroll to explore</span>
    </div>
  </div>
</section>

