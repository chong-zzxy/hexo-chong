<section class="featured-section">
  <div class="container">
    <h2 class="section-title-landing">
      <span class="title-text">Featured Posts</span>
    </h2>

    <div class="featured-grid">
      <%
        var featuredPosts = site.posts.sort('date', -1).limit(3);
        featuredPosts.each(function(post) {
      %>
        <article class="featured-card">
          <% if (post.cover) { %>
            <div class="featured-cover">
              <a href="<%= url_for(post.path) %>">
                <img src="<%= url_for(post.cover) %>" alt="<%= post.title %>" loading="lazy">
              </a>
              <div class="featured-overlay"></div>
            </div>
          <% } %>

          <div class="featured-content">
            <% if (post.categories && post.categories.length) { %>
              <a href="<%= url_for(post.categories.data[0].path) %>" class="featured-category">
                <%= post.categories.data[0].name %>
              </a>
            <% } %>

            <h3 class="featured-title">
              <a href="<%= url_for(post.path) %>"><%= post.title %></a>
            </h3>

            <% if (post.description || post.excerpt) { %>
              <p class="featured-excerpt">
                <%= strip_html(post.description || post.excerpt).substring(0, 100) %>...
              </p>
            <% } %>

            <div class="featured-meta">
              <time><%= post.date.format('YYYY-MM-DD') %></time>
              <span class="featured-dot">â€¢</span>
              <span><%= Math.ceil(strip_html(post.content).length / 400) %> min read</span>
            </div>
          </div>
        </article>
      <% }); %>
    </div>
  </div>
</section>

